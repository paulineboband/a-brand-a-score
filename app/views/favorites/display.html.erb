<div class="container-index">
  <h3>My favorite brands</h3>
    <div class="all-cards">
      <% @favorites.each do |favorite|  %>
        <div class="card-product">
            <img src="https://images.unsplash.com/photo-1517502166878-35c93a0072f0?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=668&q=80https://images.unsplash.com/photo-1517502166878-35c93a0072f0?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=668&q=80" />
              <div class="card-product-infos">
                <p id="brand--name"> <%= link_to favorite.brand.name, brand_path(favorite.brand) %> </p>
                <%= link_to "Remove from your favorites", brand_favorite_path(favorite.brand, favorite.id), method: :delete, data: { confirm: "Delete #{favorite.brand.name} from your favorite brands?"}, class: "delete-button"%>
              </div>
          </div>
        <% end %>
      </div>
    </div>

